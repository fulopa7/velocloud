<network>
  <name>oam_interface</name> <!--This is the network name-->
  <forward mode='hostdev' managed='yes'>
    <pf dev='eth3'/> <!--Use the netdev name of your SR-IOV devices PF here, no if no list of PCIs is added below all available will be added-->
      <address type='pci' domain='0x0000' bus='0x06' slot='0x12' function='0x6'/>
      <address type='pci' domain='0x0000' bus='0x06' slot='0x12' function='0x8'/>
      <address type='pci' domain='0x0000' bus='0x06' slot='0x12' function='0x10'/>
  </forward>
</network>

